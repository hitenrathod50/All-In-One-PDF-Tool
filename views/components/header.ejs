
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="apple-touch-icon" href="/images/favicon.ico">
  <meta name="author" content="example.com"/>

  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/header.css">
  <script src="/js/color.js"></script>
  
</head>

<body class="bg-gray-50">
  <!-- Header -->
  <header class="sticky top-0 z-50 bg-header-bg border-b border-header-border backdrop-blur-sm shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16 lg:h-20">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <a href="/"
            class="text-fluid-xl font-bold text-primary hover:text-purple-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-md px-1">
            HR TOOLS
          </a>
        </div>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-1 lg:space-x-2" role="navigation">
          <ul class="flex items-center space-x-1 lg:space-x-2">
            <li>
              <a href="/imagetopdf"
                class="text-fluid-base px-3 py-2 rounded-md text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] flex items-center">
                Image to PDF
              </a>
            </li>
            <li>
              <a href="/merge-pdf"
                class="text-fluid-base px-3 py-2 rounded-md text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] flex items-center">
                Merge PDF
              </a>
            </li>
            <li>
              <a href="/split-pdf"
                class="text-fluid-base px-3 py-2 rounded-md text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] flex items-center">
                Split PDF
              </a>
            </li>
            <li>
              <a href="/edit-pdf-pages"
                class="text-fluid-base px-3 py-2 rounded-md text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] flex items-center">
                Edit PDF Pages
              </a>
            </li>

            <!-- All PDF Tools with submenu -->
            <li class="relative" id="desktop-submenu-container">
              <button id="desktop-submenu-trigger"
                class="text-fluid-base px-3 py-2 rounded-md text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] flex items-center space-x-1"
                aria-haspopup="true" aria-expanded="false">
                <span>All PDF Tools</span>
                <svg id="desktop-chevron" class="w-4 h-4 transition-transform duration-200" fill="none"
                  stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>

              <!-- Desktop Submenu -->
              <div id="desktop-submenu"
                class="absolute top-full left-0 mt-1 w-96 bg-white border border-gray-200 rounded-lg shadow-xl z-50 opacity-0 invisible transition-all duration-200"
                role="menu">
                <div class="p-4 grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <h3 class="text-fluid-sm font-semibold text-primary border-b border-gray-200 pb-1">
                      Edit PDF
                    </h3>
                    <ul class="space-y-1">
                      <li><a href="/rotate-pages"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Rotate pages</a></li>
                      <li><a href="/add-page-numbers"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Add page numbers</a></li>
                      <li><a href="/add-pages-pdf"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Add Pages</a></li>
                      <li><a href="/remove-pages"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Remove Pages</a></li>
                      <li><a href="/split-pdf"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Split PDF</a></li>
                    </ul>
                  </div>
                  <div class="space-y-2">
                    <h3 class="text-fluid-sm font-semibold text-primary border-b border-gray-200 pb-1">
                      Create PDF
                    </h3>
                    <ul class="space-y-1">
                      <li><a href="/imagetopdf"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Image to PDF</a></li>
                      <li><a href="/merge-pdf"
                          class="block text-fluid-sm px-2 py-1.5 text-gray-600 hover:text-nav-hover hover:bg-nav-hover-bg rounded-md transition-all duration-150"
                          role="menuitem">Merge PDF</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </nav>

        <!-- Auth Buttons -->
        <div class="flex items-center space-x-3">
          <button
            class="hidden sm:inline-flex text-fluid-sm px-4 py-2 border border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-all duration-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] font-medium">
            Login
          </button>
          <button
            class="hidden sm:inline-flex text-fluid-sm px-4 py-2 bg-primary text-primary-foreground hover:bg-purple-600 hover:shadow-lg transition-all duration-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1 min-h-[44px] font-medium">
            Signup
          </button>

          <!-- Mobile menu button -->
          <button id="mobile-menu-button"
            class="md:hidden p-2 text-gray-700 hover:text-primary hover:bg-nav-hover-bg transition-all duration-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-1"
            aria-label="Open menu" aria-expanded="false">
            <div id="hamburger-icon" class="w-6 h-6 flex flex-col justify-center items-center">
              <span class="hamburger-line block h-0.5 w-6 bg-current mb-1"></span>
              <span class="hamburger-line block h-0.5 w-6 bg-current mb-1"></span>
              <span class="hamburger-line block h-0.5 w-6 bg-current"></span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Mobile Drawer Overlay -->
  <div id="mobile-overlay"
    class="fixed inset-0 bg-overlay-bg z-40 md:hidden opacity-0 invisible transition-all duration-300"></div>

  <!-- Mobile Drawer -->
  <div id="mobile-drawer"
    class="fixed top-0 right-0 h-full w-[min(92vw,420px)] bg-drawer-bg shadow-2xl z-50 md:hidden transform translate-x-full"
    role="dialog" aria-modal="true" aria-label="Mobile navigation menu">
    <div class="flex flex-col h-full">
      <!-- Drawer Header -->
      <div class="flex items-center justify-between p-4 border-b border-gray-200">
        <span class="text-fluid-lg font-semibold text-primary">Menu</span>
        <button id="drawer-close-button"
          class="p-2 text-gray-700 hover:text-primary hover:bg-nav-hover-bg transition-colors rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
          aria-label="Close menu">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Drawer Content -->
      <nav class="flex-1 overflow-y-auto p-4 drawer-scroll" role="navigation">
        <ul class="space-y-2">
          <li>
            <a href="/imagetopdf"
              class="block text-fluid-base px-4 py-3 text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 rounded-md min-h-[44px] flex items-center">
              Image to PDF
            </a>
          </li>
          <li>
            <a href="/merge-pdf"
              class="block text-fluid-base px-4 py-3 text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 rounded-md min-h-[44px] flex items-center">
              Merge PDF
            </a>
          </li>
          <li>
            <a href="/split-pdf"
              class="block text-fluid-base px-4 py-3 text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 rounded-md min-h-[44px] flex items-center">
              Split PDF
            </a>
          </li>
          <li>
            <a href="/edit-pdf-pages"
              class="block text-fluid-base px-4 py-3 text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 rounded-md min-h-[44px] flex items-center">
              Edit PDF Pages
            </a>
          </li>

          <!-- Mobile All PDF Tools -->
          <li>
            <button id="mobile-submenu-trigger"
              class="w-full text-left text-fluid-base px-4 py-3 text-gray-700 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-200 rounded-md min-h-[44px] flex items-center justify-between"
              aria-expanded="false">
              <span>All PDF Tools</span>
              <svg id="mobile-chevron" class="w-4 h-4 transition-transform duration-200" fill="none"
                stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <!-- Mobile Submenu -->
            <div id="mobile-submenu" class="submenu-collapsed">
              <div class="pl-4 pt-2 space-y-4">
                <div>
                  <h3 class="text-fluid-sm font-semibold text-primary mb-2 px-4">
                    Edit PDF
                  </h3>
                  <ul class="space-y-1">
                    <!-- <ul class="space-y-1 pl-4 md:pl-0"></ul> -->
                    <li><a href="/rotate-pages"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Rotate
                        pages</a></li>
                    <li><a href="/add-page-numbers"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Add
                        page numbers</a></li>
                    <li><a href="/add-pages-pdf"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Add
                        Pages</a></li>
                    <li><a href="/remove-pages"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Remove
                        Pages</a></li>
                    <li><a href="/split-pdf"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Split
                        PDF</a></li>
                  </ul>
                </div>
                <div>
                  <h3 class="text-fluid-sm font-semibold text-primary mb-2 px-4">
                    Create PDF
                  </h3>
                  <ul class="space-y-1">
                    <!-- <ul class="space-y-1 pl-4 md:pl-0"></ul> -->
                    <li><a href="/imagetopdf"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Image
                        to PDF</a></li>
                    <li><a href="/merge-pdf"
                        class="block text-fluid-sm px-4 py-2 text-gray-500 hover:text-nav-hover hover:bg-nav-hover-bg transition-all duration-150 rounded-md">Merge
                        PDF</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
        </ul>

        <!-- Mobile Auth Buttons -->
        <div class="mt-8 space-y-3 pt-6 border-t border-gray-200">
          <button
            class="w-full text-fluid-base px-4 py-3 border border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-all duration-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary min-h-[44px] font-medium">
            Login
          </button>
          <button
            class="w-full text-fluid-base px-4 py-3 bg-primary text-primary-foreground hover:bg-purple-600 hover:shadow-lg transition-all duration-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary min-h-[44px] font-medium">
            Signup
          </button>
        </div>
      </nav>
    </div>
  </div>
  

  <script src="/js/header.js"></script>
