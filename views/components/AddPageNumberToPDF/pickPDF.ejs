<div class="bg-white rounded-lg shadow-lg p-6 m-3 max-w-md mx-auto text-center">
    <h2 class="text-2xl font-bold text-[var(--primary-color)] mb-4">Add Page Number to PDf</h2>
    <div 
        id="dropZone" 
        class="border-2 border-dashed border-[var(--primary-color)] p-8 rounded-lg hover:bg-gray-50 cursor-pointer transition-colors duration-200"
    >
        <p class="text-gray-600 mb-4">Drag and drop PDF here or click to select</p>
        <input 
            type="file" 
            id="pdfInputFirst" 
            accept="application/pdf"
            class="hidden"
            onchange="handleFileSelect(event)"
        >
        <button
            class="bg-[var(--primary-color)] text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition"
        >
            Select PDF
        </button>
    </div>
</div>

<script>
    const dropZone = document.getElementById('dropZone');

    dropZone.addEventListener('dragover', (event) => {
        event.preventDefault();
        dropZone.classList.add('bg-purple-100', 'border-solid', 'border-black-500');
    });

    dropZone.addEventListener('dragenter', (event) => {
        event.preventDefault();
        dropZone.classList.add('bg-purple-100', 'border-solid', 'border-black-500');
    });

    dropZone.addEventListener('dragleave', (event) => {
        event.preventDefault();
        dropZone.classList.remove('bg-purple-100', 'border-solid', 'border-black-500');
    });

    dropZone.addEventListener('drop', (event) => {
        event.preventDefault();
        dropZone.classList.remove('bg-purple-100', 'border-solid', 'border-black-500');
        handleDrop(event);
    });

    dropZone.addEventListener('click', () => {
        document.getElementById('pdfInputFirst').click();
    });

    function handleDrop(event) {
        const files = event.dataTransfer.files;
        if (files.length) {
            document.getElementById('pdfInputFirst').files = files;
            handleFileSelect({ target: { files } });
        }
    }

    function handleFileSelect(event) {
        const files = event.target.files;
        // Add your file handling logic here
        console.log('Selected files:', files);
    }
</script>